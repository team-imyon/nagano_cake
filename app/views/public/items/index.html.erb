
    <div class="mt-5 px-5" >
      <h2 style="display: inline-block; font-weight: bold;">商品一覧</h2>
      <h4 style="display: inline-block;">(全<%= @all_items.count %>件)</h4>
    </div>

  <div class="item-wrap">
  <!--#cssで定義したコンテンツを中央へ-->
    <% @items.each do |item| %>

      <div class="item-box">
        <%= image_tag item.get_image(180,150) %>


        <div class="item-comment">
          <span class="item-name">
            <%= link_to item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </span>
          <br>
          <span class="item-price">￥<%= (item.price * 1.10).round %></span>
        </div>

      </div>

    <% end %>
  </div>
    <div class="d-flex justify-content-center">
      <%= paginate @items, theme: 'bootstrap-5' %>
    </div>