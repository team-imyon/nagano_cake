<h3>商品一覧</h3>
  <div class="item-wrap">
  <!--#cssで定義したコンテンツを中央へ-->
    <% @items.each do |item| %>
    
      <div class="item-box">
        <%= image_tag item.get_image(100,100) %>
        
        <div class="list-comment">
          <span class="item-name">
            <%= link_to item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </span>
          <br>
          <span class="item-praice">￥<%= item.price %></span>
        </div>
        
      </div>
      
    <% end %>
  </div>
    <div class="d-flex justify-content-center">
      <%= paginate @items, theme: 'bootstrap-5' %>
    </div>