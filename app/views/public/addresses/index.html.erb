<p>Find me in app/views/public/addresses/index.html.erb</p>
<div class="container">
  <div class="row">
    <h5　class="border d-flex justify-content-start my-5 px-3">
    配送先登録/一覧
  </h5>
  </div>
  
  <%= form_with model: @address do |f| %>
    <div class="row d-flex justify-content-center">
      <diV class="title">
        <div class="field my-1" >
          <%= f.label :"郵便番号(ハイフンなし)", class: "my-1" %></br>
          <%= f.label :"住所", class: "my-1" %></br>
          <%= f.label :"宛名", class: "my-1" %>
        </div>
      </diV>

      <diV class="text offset-1">
        <div class="field my-1">
          <%= f.text_field :post_code, class: "my-1" %></br>
          <%= f.text_field :address, class: "my-1" %></br>
          <%= f.text_field :name, class: "my-1" %>
          <%= f.submit "登録",class:"btn btn-success my-1" %>
        </div>
      </div>
    </div>
  <%end %>
  
  
  <diV class="row d-flex justify-content-center">
    <table class="table">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="2"></th>
      </tr>
      
      <tr>
      <% @address.each do |a| %>
        <td><%= a.post_code %></td>
        <td><%= a.address %></td>
        <td><%= a.name %></td>
        <td><%= link_to "Edit", public_about_path(@address.id), class:"btn btn-sm btn-success" %>
            <%= link_to "Destroy", public_about_path(@address.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      <% end %>
      </tr>
    </table>
  </diV>

</div>