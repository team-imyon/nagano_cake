<div class="container">
  <div class="row my-5">
    <h5 class="d-flex justify-content-start border px-3">
    配送先登録/一覧
  </h5>
  </div>
  
  <%= form_with model: @naddress do |f| %>
    <div class="row d-flex justify-content-center my-3">
      <diV class="title">
        <div class="field my-1" >
          <%= f.label :"郵便番号(ハイフンなし)", class: "my-1" %></br>
          <%= f.label :"住所", class: "my-1" %></br>
          <%= f.label :"宛名", class: "my-1" %>
        </div>
      </diV>

      <diV class="text offset-1">
        <div class="field my-1">
          <%= f.text_field :post_code, class: "rounded my-1" %></br>
          <%= f.text_field :address, class: "rounded my-1" %></br>
          <%= f.text_field :name, class: "rounded my-1" %>
          <%= f.submit "登録",class:"btn btn-success my-1" %>
        </div>
      </div>
    </div>
  <%end %>
  

  <diV class="row d-flex justify-content-center my-3">
    <table class="table table-bordered">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
      </tr>
      
      <% @address.each do |a| %>
        <tr>
          <td><%= a.post_code %></td>
          <td><%= a.address %></td>
          <td><%= a.name %></td>
          <td><%= link_to "編集する", edit_address_path(a.id), class:"btn btn-sm btn-success" %>
              <%= link_to "削除する", address_path(a.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
          </td>
        </tr>
      <% end %>
    </table>
  </diV>

</div>