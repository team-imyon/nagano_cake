<!--ryon-->
<div class="container p-3">
  <div class="row">
    <h5 class="border d-flex justify-content-start my-5 px-3" >
        注文履歴詳細
    </h5>
    <div class="col-md-12">

      <h5><b>注文情報</b></h5>
      <table class="table">
        <!--注文日をYYYY/MM/DD表示-->
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <!--配送先情報（郵便番号、住所、宛名）を @order オブジェクトから取得、表示-->
        <tr>
          <td>配送先</td>
          <td>〒<%= @order.post_code + " " + @order.address + " " +@order.name %></td>
        </tr>
        <!--支払い方法を国際化（i18n）されたテキストで表示-->
        <tr>
          <td>支払い方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
         <!--注文ステータスを国際化（i18n）されたテキストで表示-->
        <tr>
          <td>ステータス</td>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>

      <h5><b>請求情報</b></h5>
      <table class="table">
        <% @order_details.each do |order_detail| %>
        <tr>
          <td>商品合計</td>
          <td><%= order_detail.amount * order_detail.item.with_tax_price %>円</td>
        </tr>

        <tr>
          <td>配送料</td>
          <td><%= @order.postage %>円</td>
        </tr>

        <tr>
          <td>ご請求額</td>
          <td><%= @order.total_payment %>円</td>
        </tr>
        <% end %>
      </table>

      <h5><b>注文内容</b></h5>
      <table class="table">
        <tr>
          <td>商品名</td>
          <td>単価(税込)</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
        <!--注文詳細情報を反復処理-->
        <% @order_details.each do |order_detail| %>
          <tr>
            <!--商品名-->
            <td><%= order_detail.item.name %></td>
            <!--単価-->
            <td><%= order_detail.item.with_tax_price %>円</td>
            <!--個数-->
            <td><%= order_detail.amount %></td>
            <!--小計-->
            <td><%= order_detail.amount * order_detail.item.with_tax_price %>円</td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>