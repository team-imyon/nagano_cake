<div class="container">
  <div class="row d-flex justify-content-between my-5 px-3">
    <div class="border">
      <h2>ショッピングカート</h2>
    </div>
    <div>

    <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, "data-confirm" => "本当に空にしますか？", class:"btn btn-danger" %>

    </div>
  </div>

<table class="table table-bordered">
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <!--カートアイテム表示したい！！-->
  <% @cart_items.each do |cart_item| %>
  <tr>
    <td>
        <%= image_tag cart_item.item.get_image(100,100) %>
        <%= cart_item.item.name %>
    </td>

    <td><%= cart_item.item.with_tax_price %>円</td>

    <td>
      <%= form_with(model: cart_item, url: cart_item_path(cart_item.id), method: :patch) do |f| %>
        <%= f.select :amount, *[1..10] %>
        <%= f.submit "変更" , class:"btn btn-success" %>
      <% end %>
    </td>

    <td><%= cart_item.subtotal %>円</td>
    <td><%= link_to "削除する", cart_item_path(cart_item.id) , method: :delete, "data-confirm" => "本当に削除しますか？" , class:"btn btn-danger" %></td>
  </tr>
  <% end %>
</table>

<%= link_to "買い物を続ける", root_path , class:"btn btn-primary" %>

<table class="table table-bordered">
  <tr>
    <th>合計金額</th><td><%= @cart_items.sum { |cart_item| cart_item.subtotal } %>円</td>
  </tr>
</table>

<%= link_to "情報入力に進む", new_order_path , class:"btn btn-success" %>
</div>

