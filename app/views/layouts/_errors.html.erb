<% if obj.errors.any? %>
  <div class="row d-flex justify-content-start">
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <ul>
        <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>

<% end %>

