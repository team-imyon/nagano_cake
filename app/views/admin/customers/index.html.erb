<div class="container">
  <div class="row">
    <h5 class="border d-flex justify-content-start my-5 px-3">
      会員一覧
    </h5>
  </div>
  
  
  <div class="row">
    <table class="table">
      
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
    
    <tr>
    <% @customers.each do |i| %>
      <td><%= i.id %></td>
      <td><%= link_to i.full_name, admin_customers_show_path(@customers) %></td>
      <td><%= i.email %></td>
      <td><%= i.is_active %></td>
    <% end %>
    </tr>
    </table>
  </div>
  
  <%= paginate @customers %>
  
</div>