<div class="container">
  <div class="row">
    <h5 class="border d-flex justify-content-start my-5 px-3">
      会員一覧
    </h5>
  </div>


  <div class="row">
    <table class="table">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
  
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.full_name, admin_customer_path(customer) %></td>
          <td><%= customer.email %></td>
          <td><%= customer.is_active %></td>
          <td><% if customer.is_active %>
          
          </td>
        </tr>
      <% end %>
    </table>
  </div>

  <%= paginate @customers %>

</div>