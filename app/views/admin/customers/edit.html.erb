<h1>管理者が顧客編集するところ！！</h1>
<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">会員情報編集</h4>
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
      <table class="table table-borderless">
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
            <td></td>
          </tr>

          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>

          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :furigana_last_name %></td>
            <td><%= f.text_field :furigana_first_name %></td>
          </tr>

          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :post_code %></td>
            <td></td>
          </tr>

          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
            <td></td>
          </tr>

          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :tel_number %></td>
            <td></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
            <td></td>
          </tr>

          <tr>
            <td>会員ステータス</td>
            <td>

              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "有効", { value: :true }  %>

              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "退会", { value: :false } %>
            </td>
          </tr>

          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>