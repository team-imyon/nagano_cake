<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-3">会員情報編集</h4>
    </div>
  </div>
  <%= render "layouts/errors", obj: @customer %>
  <div class="row d-flex justify-content-center">
    <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
          <td></td>
        </tr>

        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name, class: "rounded" %>
              <%= f.text_field :first_name, class: "rounded" %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :furigana_last_name, class: "rounded" %>
          <%= f.text_field :furigana_first_name, class: "rounded" %></td>
        </tr>

        <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :post_code, class: "rounded" %></td>
        <td></td>
        </tr>

        <tr colspan="2">
        <td>住所</td>
        <td><%= f.text_field :address, size: 60, class: "rounded" %></td>
        <td></td>
        </tr>

        <tr>
        <td>電話番号</td>
        <td><%= f.text_field :tel_number, class: "rounded" %></td>
        <td></td>
        </tr>

        <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email, class: "rounded" %></td>
        <td></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", { value: :true }  %>

            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会", { value: :false } %>
          </td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>