<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
    
      <h2>管理者ログイン</h2>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field my-3" >
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mx-auto" %>
        </div>
      
        <div class="field my-3">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "ログイン",class:"btn btn-primary my-3" %>
        </div>
      <% end %>
      
      <%= render "admin/shared/links" %>
      
    </div>

  </div>
</div>
