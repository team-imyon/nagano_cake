  <div class="container">
    <div class="row">
      <h5 class="border d-flex justify-content-start my-5 px-3" >ジャンル編集</h5>
    </div>
    <div class="row">
      <%= render "layouts/errors", obj: @genre %>
    </div>

    <div class="row">
      <div>
        <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
          <tr>
            <td><%= f.label :name, "ジャンル名", class: "mr-3" %></td>
            <td><%= f.text_field :name, class: "mr-5" %></td>
            <td><%= f.submit "変更を保存", class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </div>
    </div>
  </div>