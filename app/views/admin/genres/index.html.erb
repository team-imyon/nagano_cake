  <!--ryon-->
  <div class="container">
    <div class="row d-flex justify-content-center">
      <h5 class="border p-3 my-3">
        ジャンル一覧・追加
      </h5>
    </div>
    <br
    <%= render "layouts/errors", obj: @genre %>
    
    <div class="row d-flex justify-content-center">
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <div class="table table-borderless">
        <tr>
          <td><%= f.label :name, "ジャンル名", class: "mr-3" %></td>
          <td><%= f.text_field :name, placeholder: "ジャンル名", class: "mr-5" %></td>
          <td><%= f.submit '新規登録', class: "btn btn-primary" %></td>
        </tr>
      </div>
    <% end %>
    </div>

    <div class="row d-flex justify-content-center">
      <div class="pull-left">
      <table class="table">
          <tr>
          <th>ジャンル</th>
          <td></td>
          <td></td>
          <td></td>
          </tr>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td></td>
            <td></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
      </table>
      </div>
    </div>
  </div>
