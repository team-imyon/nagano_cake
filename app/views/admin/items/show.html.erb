<!--商品詳細-->
<!--ryon-->
<div class="container">
  <div class="row d-flex justify-content-center">
      <h5 class="border p-3 my-3">
        商品詳細
      </h5>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.image, size: "300x200" %>
    </div>

    <div class="col-md-5">
      <table class="table table-borderless">

        <tr>
          <td class="bd-light">商品名</td></td>
          <td><%= @item.name %></td>
          </tr>
        <tr>
          <td class="bd-light">商品説明</td>
          <td><%= @item.explanation %></td>
        </tr>

        <tr>
          <td class="bd-light">ジャンル</td>
          <td><%= @genre.name %></td>
        </tr>

        <tr>
          <td class="bd-light">税込価格(税抜価格)</td>

          <td><%= @item.with_tax_price %>(<%= @item.price %>)円</td>

        </tr>

        <tr>
          <td class="bd-light">販売ステータス</td>
          <td>
            <% if @item.is_active %>
              <p class="text-success"><strong>販売中</strong></p>
            <% else %>
              <p class="text-secondary"><strong>販売停止中</strong></p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

    <div class="d-flex justify-content-center">
      <%= link_to "編集する", edit_admin_item_path, class:"btn btn-success ml-3" %>
    </div>
</div>

