<div class="container">
  <div class="row d-flex justify-content-center">
    <div>
    <h5 class="border p-3 my-3">
      商品一覧
    </h5>
    </div>

    <div class="col-auto text-right p-3 my-3">
      <button type="button" class="btn btn-outline-secondary btn-light rounded-circle p-0" style="width:2rem;height:2rem;">
        <%= link_to "＋", new_admin_item_path, class:"text-secondary"%>
      </button>
    </div>
  </div>

  <div class="row">
    <table class="table">

      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>

      <% @items.each do |i| %>
      <tr>
        <td><%= i.id %></td>
        <td><%= link_to i.name, admin_item_path(i.id) %></td>
        <td><%= i.price %></td>
        <td><%= i.genre.name %></td>
        <td>
          <% if i.is_active %>
          <p class="text-success">販売中</p>
          <% else %>
           <p class="text-secondary">販売停止中</p>
          <% end %>
        </td>
      </tr>
      <% end %>

    </table>
  </div>
  
  <div class="d-flex justify-content-center">
    <%= paginate @items, theme: 'bootstrap-5' %>
  </div>

</div>