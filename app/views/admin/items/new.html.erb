<!--商品新規登録-->
<%= form_with model: @item do |f| %>

  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>商品名</h4>
  <%= f.text_field :name, placeholder: "商品名" %>

  <h4>商品説明</h4>
  <%= f.text_area :explanation, placeholder: "ここに説明文を記述します" %>

  <h4>ジャンル</h4>

  <h4>税抜価格</h4>
  <%= f.text_field :price, placeholder: "1000" %>円

  <h4>販売ステータス</h4>

  <%= f.submit '新規登録' %>
<% end %>