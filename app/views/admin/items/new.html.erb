<!--商品新規登録-->
<div class="container">
  <div class="row">
    <div class="col">
      <h2>商品新規登録</h2>

 　　   <%= form_with model: @item do |f| %>
      <table class="table table-borderless">


        <tr>
          <td>商品画像</td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>

        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name, placeholder: "商品名" %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :explanation, placeholder: "ここに説明文を記述します" %></td>
        </tr>



        <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></td>
        </tr>

        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price, placeholder: "1000" %>円</td>
        </tr>


      <tr>
        <td>販売ステータス</td>
        <td>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "販売中", { value: :false }  %>

          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "販売停止中", { value: :true } %>
        </td>
      </tr>

      <tr>
        <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
      </tr>
　　　<% end %>
    </table>
    </div>
  </div>
</div>