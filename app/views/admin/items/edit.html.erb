<!--商品編集-->
<div class="container">
  <div class="row d-flex justify-content-center">
    <h5 class="border p-3 my-3">
      商品編集
    </h5>
  </div>
    <br>
    <%= render "layouts/errors", obj: @item %>
      
    <div class="row d-flex justify-content-center">
 　　   <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
      <table class="table table-borderless">
        
        <tr>
          <td>商品画像</td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>

        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name, style: "width:60%", placeholder: "商品名" %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :explanation, style: "width:60%", rows: "5", placeholder: "ここに説明文を記述します" %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></td>
        </tr>

        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price, placeholder: "1000" %>円</td>
        </tr>

        <tr>
          <td>販売ステータス</td>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "販売中", { value: :true }  %>

            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中", { value: :false } %>
          </td>
        </tr>
      </table>
      <div class="row d-flex justify-content-center">
        <tr>
          <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
        </tr>
      </div>
      <% end %>
    </div>
</div>