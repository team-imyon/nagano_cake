<div class="container p-3">
  <div class="row">
   <h5 class="border d-flex justify-content-start my-5 px-3" >
        <%= @customer.full_name %>の注文履歴一覧
      </h5>

      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <!--各注文情報に対して繰り返し処理-->
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <!--注文日をYYYY/MM/DD表示-->
              <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
              <!--注文個数-->
              <td><%= order.order_details.sum(:amount)%></td>
              <!--注文ステータスを表示-->
              <!--status_i18n メソッドでステータスを国際化されたテキストに変換表示-->
              <td><%= order.status_i18n %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <!--ページネーションを表示-->

      <div class="d-flex justify-content-center">
        <%= paginate @orders, theme: 'bootstrap-5' %>
      </div>

    </div>
  </div>
</div>
